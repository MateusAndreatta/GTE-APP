<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="xyz.sistemagte.gte.EditarEndereco">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/editar_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/editar_endereco"
                android:textSize="35sp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/editar_cep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:hint="@string/cep"
                android:background="@drawable/input_style"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/editar_rua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="@string/rua"
                android:background="@drawable/input_style"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/editar_cidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="@string/cidade"
                android:background="@drawable/input_style"
                android:layout_marginBottom="5dp"/>

            <Spinner
                android:id="@+id/cad_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/input_style"
                android:entries="@array/estados" />


            <EditText
                android:id="@+id/num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:hint="@string/complemento"
                android:background="@drawable/input_style"
                android:layout_marginBottom="5dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/salvar"
                android:textColor="@color/branco"
                android:id="@+id/editar_motorista"
                android:onClick="salvarEdicao"
                android:background="@drawable/btn_padrao"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

